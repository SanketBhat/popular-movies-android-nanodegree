<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/video_item_width"
    android:layout_height="@dimen/video_item_height"
    app:cardElevation="@dimen/common_card_view_elevation"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/movie_video_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:contentDescription="@string/movie_details_video_description"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/movie_details_video_play_button"
        app:srcCompat="@drawable/ic_play_circle_filled_white" />
</android.support.v7.widget.CardView>